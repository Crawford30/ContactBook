<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:hint="Name'"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txt_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_name"
        android:ems="10"
        android:hint="Cell"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txt_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_name"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-65dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_view"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_save"
        android:layout_marginEnd="64dp"
        android:onClick="viewData"
        android:text="View" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="75dp"
        android:text="Save" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_view"
        android:layout_alignTop="@+id/btn_update"
        android:onClick="deleteData"
        android:text="Delete" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_save"
        android:layout_marginBottom="120dp"
        android:onClick="updateData"
        android:text="Update" />
</RelativeLayout>